<%= render "shared/header" %>
<div class="wrapper">
  <div class="side-bar">
    <%= render "shared/side_bar" %>
  </div>
  <div class='user-form'>
    <h1>ログイン</h1>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class='user-form__field'>
        <div class='user-form__field--left'>
          <%= f.label :email, class: 'user-form__label'%>
        </div>
        <div class='user-form__field--right'>
          <%= f.text_field :email, class: 'user-form__input', placeholder: 'ルーム名を入力してください'%>
        </div>
      </div>
      <div class='user-form__field'>
        <div class='user-form__field--left'>
          <%= f.label :パスワード, class: 'user-form__label'%>
        </div>
        <div class='user-form__field--right'>
          <%= f.text_field :password, class: 'user-form__input', placeholder: 'パスワードを入力してください'%>
        </div>
      </div>
      <div class='user-form__field'>
        <div class='user-form__field--left'></div>
        <div class='user-form__field--right'>
          <%= f.submit "ログイン", class: 'user-form__action-btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>