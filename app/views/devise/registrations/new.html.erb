<%= render "shared/header" %>
<div class="wrapper">
  <div class="side-bar">
    <%= render "shared/side_bar" %>
  </div>
  <div class='user-registration-form'>
    <h1>ユーザー新規登録</h1>
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <div class='user-form__field'>
        <div class='user-form__field--left'>
          <%= f.label :ニックネーム, class: 'user-form__label'%>
        </div>
        <div class='user-form__field--right'>
          <%= f.text_field :nickname, class: 'user-form__input', placeholder: 'ニックネームを入力してください'%>
        </div>
      </div>
      <div class='user-form__field'>
        <div class='user-form__field--left'>
          <%= f.label :メールアドレス, class: 'user-form__label'%>
        </div>
        <div class='user-form__field--right'>
          <%= f.text_field :email, class: 'user-form__input', placeholder: 'ルーム名を入力してください'%>
        </div>
      </div>
      <div class='user-form__field'>
        <div class='user-form__field--left'>
          <%= f.label :パスワード, class: 'user-form__label'%>
        </div>
        <div class='user-form__field--right'>
          <%= f.text_field :password, class: 'user-form__input', placeholder: 'パスワードを入力してください'%>
        </div>
      </div>
      <div class='user-form__field'>
        <div class='user-form__field--left'>
          <%= f.label :パスワード（確認用）, class: 'user-form__label'%>
        </div>
        <div class='user-form__field--right'>
          <%= f.text_field :password_confirmation, class: 'user-form__input', placeholder: '再度パスワードを入力してください'%>
        </div>
      </div>
      <div class='user-form__field'>
        <div class='user-form__field--left'></div>
        <div class='user-form__field--right'>
          <%= f.submit "新規登録",class: 'user-form__action-btn'%>
        </div>
      </div>
    <% end %>
  </div>